<% provide(:title, 'Teams') %>
<% provide(:button_text, 'Create a team') %>
<h1>All teams</h1>

<ul class="users">
<% @teams.each do |team| %>
   <li>
     <%= link_to team.name, "/teams/#{team.id}" %>
     
     <% if current_user.admin? %> 
     <td> | <%= link_to 'delete', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     <% end %>
     
   </li>
<% end %>
</ul>

<% if current_user.admin? %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
  </div>
</div>
<% end %>
