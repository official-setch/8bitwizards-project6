<% provide(:title, 'Add users to the team') %>
<h1>Add users to the team</h1>

<ul class="users">
  <% @users.each do |user| %>
   <li>
     <%= gravatar_for user, size: 50 %>
     <%= link_to user.name, user %>

     <% if !current_user?(user) %> 
     <td> | <%= link_to 'delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     <% end %>
          
   </li>
  <% end %>
</ul>
