<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
       <h3>
       <%# go through all the teams %>
       <%Team.all.each do |t| %>
       		<h1>
      			<%=t.name%>
      		</h1>
      		<br>
      		<%# find meamberships of that team %>
      		<% memberships=TeamMembership.where(team_id: t.id)%>
      		<br>
      		<%# loop over memberships %>
      		<% memberships.each do |m| %>
      			<%# when user id matches user id in membership, print user name %>
      			<%User.where(id: m.user_id).each do |user| %>
      				<%=user.name%>
      				<% if current_user.admin? %>
      					<td> | <%= link_to 'delete', m, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      				<% end %>
      				<br>
      			<%end%>
      		<%end%>
       <%end%>
         
      </h3>
    </section>
  </aside>
</div>

