<!-- profile page to list the information of the user -->

<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
       <h1>
         <%= gravatar_for @user %>
         <%= @user.name %>         
      </h1>
      <%= @user.email %>
    </section>
  </aside>
</div>
